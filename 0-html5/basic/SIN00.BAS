' DRAW 3D SIN
SCREEN 7
DIM A,B,R,F AS DOUBLE
DIM X,Y AS double

FOR Y=-10 TO 10 STEP 0.2
  FOR X=-10 TO 10 STEP 0.3
    R=SQR(X*X+Y*Y)*1.5
    F=90
    IF R>0 THEN F=ABS(90*SIN(R)/R)
    A=INT(10*X+160-5*Y)
    B=INT(5*Y+2.5*X+93)
	
   'IF A<279 THEN HCOLOR=1: PSET A,B-F: rem HCOLOR=6: HPLOT A,B+20

   PSET(A,B-F), 15
  NEXT X
NEXT Y

